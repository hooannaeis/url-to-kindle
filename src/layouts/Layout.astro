---
import Footer from "../components/Footer.astro";
import CSPHeader from "../components/CSPHeader.astro";
import AnalyticsPixel from "../components/AnalyticsPixel.astro";
import MetaTags from "../components/MetaTags.astro";
import BaseStyles from "../components/BaseStyles.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <CSPHeader />
    <BaseStyles />
    <MetaTags title={title} />
    <AnalyticsPixel
      pageTitle={title}
      eventParams={{
        page_layout: "layout",
      }}
    />
  </head>
  <body class="border-l-8 border-slate-900">
    <section
      class="min-h-screen bg-slate-50 flex items-center justify-center p-4"
    >
      <div class="w-full max-w-md mx-auto">
        <slot />
      </div>
    </section>
  </body><Footer />
</html>
